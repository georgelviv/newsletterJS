<div class="main__content">
	<article class="main__article" data-repeat="articles">
		<h2 data-value="title"></h2>
		<p class="article__paragraph" data-value="description"></p>
		<footer class="article__footer">
			<time class="article__footer__datetime" data-add-attr-datetime="item.date" 
				data-value="date"></time>
			<span class="article__footer__index" data-value="index"></span>
		</footer>
	</article>
</div>